{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "bleeding"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": "org.jetbrains.kotlinx:kotlinx-datetime",
      "allowedVersions": "!/^.+-compat$/"
    }
  ],
  "platformAutomerge": true,
  "labels": [
    "{{parentDir}}"
  ]
}
